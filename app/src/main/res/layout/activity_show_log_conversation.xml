<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">
            <TextView
                    android:textSize="24dp"
                    android:textColor="@color/vk_share_blue_color"
                    android:gravity="center"
                    android:text="Паша Милков"
                    android:textStyle="bold"
                    android:layout_gravity="top|center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/pop_up_date"
                        android:layout_alignParentLeft="true"
                        android:background="@null"
                        android:src="@drawable/ic_search"
                        android:layout_centerInParent="true"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>
                <TextView
                        android:textSize="14dp"
                        android:gravity="center"
                        android:text="лог-окно"
                        android:textStyle="normal"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageButton
                        android:id="@+id/stop_log_file_conversation"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="60dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_stop"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                <ImageButton
                        android:id="@+id/delete_log_file_conversation"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:src="@drawable/ic_delete_log"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>
            </RelativeLayout>
        </LinearLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_logfile_conversation"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <com.github.rahatarmanahmed.cpv.CircularProgressView
                    android:id="@+id/cpv_logfile_conv"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/loaded_size"
                    android:layout_height="@dimen/loaded_size"/>
            <TextView
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:id="@+id/textview_logfile_conv_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </FrameLayout>
</LinearLayout>