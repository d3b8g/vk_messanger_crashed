<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" android:id="@+id/message_ident"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="88dp">
        <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginBottom="14dp"
                    android:src="@drawable/ic_stop"
                    android:layout_marginRight="8dp"
                    android:id="@+id/message_civ_avatar"
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/message_inject_online"
                    android:src="#8AC176"
                    android:visibility="gone"
                    android:layout_width="@dimen/online_size"
                    android:layout_height="@dimen/online_size"
                    android:layout_alignEnd="@+id/message_civ_avatar"
                    android:layout_alignTop="@+id/message_civ_avatar"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="12dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:id="@+id/dialogs_txt_username"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
            />
            <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="left|center"
                    android:textColor="@color/vk_share_blue_color"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/chatuser_avatar_last_message"
                    android:layout_width="wrap_content"
                    android:maxWidth="110dp"
                    android:layout_height="30dp"/>
            <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="28dp"
                    android:id="@+id/last_message"
                    android:layout_toRightOf="@id/chatuser_avatar_last_message"
                    android:lines="1"
                    android:layout_marginLeft="6dp"
                    android:gravity="left|center"
                    android:layout_marginBottom="25dp"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        <LinearLayout
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"
                android:layout_centerInParent="true"
                android:background="@color/vk_share_link_color"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>
        <TextView
                android:visibility="gone"
                android:id="@+id/count_unread_message"
                android:background="@drawable/background_shape_style_small_width"
                android:backgroundTint="#FFFFFF"
                android:layout_centerInParent="true"
                android:textColor="@color/vk_share_blue_color"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_width="50dp"
                android:layout_height="match_parent"/>
    </RelativeLayout>
</FrameLayout>