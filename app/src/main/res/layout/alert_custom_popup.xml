<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_margin="16dp"
        android:background="#FFF"
        android:layout_gravity="center"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="350dp"
        android:layout_height="275dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logout_info_avatar"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        <TextView
                android:id="@+id/logout_info_username"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="24dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:gravity="center"
                android:padding="3dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:id="@+id/logout_info_text_id"
                android:text="@string/logout_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/logout_info_btn_no"
                android:gravity="center"
                android:layout_gravity="end"
                android:text="Нет"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@null"
                android:textColor="@color/vk_color"
                android:layout_width="70dp"
                android:layout_height="45dp"/>
        <Button
                android:id="@+id/logout_info_btn_yes"
                android:gravity="center"
                android:layout_gravity="end"
                android:text="Да"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@null"
                android:textColor="#F05C44"
                android:layout_width="70dp"
                android:layout_height="45dp"/>
    </LinearLayout>

</LinearLayout>