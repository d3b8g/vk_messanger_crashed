<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/background_shape_style"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="385dp">
    <!-- Form Changed user ID -->
    <LinearLayout
            android:layout_margin="6dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <TextView
                android:textColor="@color/vk_color"
                android:textSize="16dp"
                android:layout_marginTop="6dp"
                android:text="@string/change_enter_id"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:singleLine="true"
                android:id="@+id/change_user_id"
                android:padding="6dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="240dp"
                android:layout_height="wrap_content"/>

        <ImageButton
                android:layout_gravity="center"
                android:id="@+id/change_user_agree"
                android:layout_width="44dp"
                android:src="@drawable/ic_check_black_24dp"
                android:background="@null"
                android:layout_height="44dp"/>
    </LinearLayout>
    <!-- Form enter username -->
    <LinearLayout
            android:layout_margin="6dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <TextView
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:textSize="16dp"
                android:textColor="@color/vk_color"
                android:text="@string/change_enter_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:singleLine="true"
                android:id="@+id/change_user_username"
                android:layout_marginTop="19dp"
                android:padding="6dp"
                android:layout_gravity="center"
                android:layout_width="240dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <!-- Result -->
    <LinearLayout
            android:layout_margin="6dp"
            android:visibility="gone"
            android:id="@+id/change_user_layout_result"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/change_user_avatar_result"
                android:layout_margin="6dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        <TextView
                android:id="@+id/change_user_name_result"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:textSize="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>