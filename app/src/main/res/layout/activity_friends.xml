<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.FriendsActivity">

    <RelativeLayout
            android:id="@+id/friends_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/friends_title_text"
                android:text="Друзья"
                android:textStyle="bold"
                android:textColor="@color/vk_color"
                android:textSize="28dp"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageButton
                android:id="@+id/friends_search_btn"
                android:src="@drawable/ic_search"
                android:background="@null"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        <EditText
                android:visibility="gone"
                android:id="@+id/txt_friends_search"
                android:singleLine="true"
                android:layout_toLeftOf="@id/friends_search_btn"
                android:layout_toRightOf="@id/friends_title_text"
                android:layout_centerInParent="true"
                android:textSize="14dp"
                android:background="@null"
                android:imeOptions="actionDone"
                android:layout_width="180dp"
                android:hint="@string/friends_search_hint"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/friends_lines_layout_first"
            android:layout_below="@id/friends_title_layout"
            android:background="@color/vk_grey_color"
            android:layout_width="match_parent" android:layout_height="2dp"
            android:orientation="horizontal"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="16dp"
    />

    <Button
            android:layout_margin="6dp"
            android:id="@+id/friends_change_name_btn"
            android:layout_below="@id/friends_lines_layout_first"
            android:background="@null"
            android:textColor="@color/vk_light_color"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="@string/change_friend_name"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="26dp"/>

    <FrameLayout
            android:layout_below="@id/friends_change_name_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:overScrollMode="never"
                    android:id="@+id/recycler_friends"
                    android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/txt_friends_no_items"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>
            <com.github.rahatarmanahmed.cpv.CircularProgressView
                    android:id="@+id/cpv_friends"
                    android:layout_width="@dimen/loaded_size"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:cpv_color="@color/colorPrimary"
                    app:cpv_animAutostart="true"
                    app:cpv_indeterminate="true"
                    android:layout_height="@dimen/loaded_size"/>
    </FrameLayout>
    <io.github.yavski.fabspeeddial.FabSpeedDial
            android:id="@+id/menu_fab"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:fabDrawable="@drawable/ic_friends"
            app:fabGravity="bottom_end"
            app:fabMenu="@menu/ic_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>