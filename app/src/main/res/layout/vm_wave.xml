<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
        android:id="@+id/vm_wave_rl"
    android:layout_width="match_parent"
    android:background="@color/vk_light_color"
    android:layout_height="50dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="5dp"
        android:src="@color/vk_color"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <ImageButton
        android:id="@+id/start_play_voicemessage"
        android:background="@null"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_play"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <LinearLayout
        android:layout_toRightOf="@id/start_play_voicemessage"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:layout_width="2dp"
        android:background="@color/vk_share_blue_color"
        android:layout_height="4dp"/>
</RelativeLayout>